<h1>Listing Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td>
        <%= article.title %>
      </td>
      <td>
        <%= article.text %>
      </td>
      <td>
        <%= link_to 'Show', article_path(article) %>
      </td>
    </tr>
  <% end %>
  <%= link_to 'New Article',  new_article_path %><br>
  <%= link_to 'Back',  articles_path %>
</table>
